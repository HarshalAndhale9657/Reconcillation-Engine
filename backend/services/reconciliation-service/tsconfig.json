{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@backend/common": ["../packages/common/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "generated", "prisma"]
}

